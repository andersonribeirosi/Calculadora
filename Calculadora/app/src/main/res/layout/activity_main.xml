<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.elfrarep.calculadora.MainActivity">

    <EditText
        android:id="@+id/processo"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_weight="1.29"
        android:background="@android:color/background_light"
        android:gravity="bottom|right"
        android:text=""
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSete"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:background="#4d4d4d"
            android:text="7"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnOito"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4d4d4d"
            android:text="8"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnNove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4d4d4d"
            android:text="9"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnSoma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4d4d4d"
            android:text="+"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnQuatro"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:background="#4d4d4d"
            android:text="4"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnCinco"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#4d4d4d"
            android:text="5"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnSeis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#4d4d4d"
            android:text="6"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnSub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#4d4d4d"
            android:text="-"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUm"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#4d4d4d"
            android:text="1"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnDois"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#4d4d4d"
            android:text="2"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnTres"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#4d4d4d"
            android:text="3"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnMulti"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#4d4d4d"
            android:text="x"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLimpar"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:background="#4d4d4d"
            android:text="C"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnZero"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#4d4d4d"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnIgual"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#4d4d4d"
            android:text="="
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#4d4d4d"
            android:text="/"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

</LinearLayout>
